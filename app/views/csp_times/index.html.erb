<h1>Work Summary <%= @from_ymd.strftime('%y/%m/%d') %> to <%= @to_ymd.strftime('%y/%m/%d') %> </h1>
<h2>Daffron</h2>
<table>
  <tr>
    <th>Request</th>
    <th>Work Date</th>
    <th>Description</th>
    <th>Entered date</th>
    <th>Entered time</th>
    <th>From</th>
    <th>To</th>
    <th>Minutes</th>
    <th>Hours</th>
  </tr>

<% @csp_times.each do |time| %>
  <tr>
    <td><%= time.tireq %></td>
    <td><%= time.tidate.strftime('%m/%d/%y') %></td>
    <td><%= time.tidesc %></td>
    <td><%= time.tiendt.strftime('%m/%d/%y') %></td>
    <td><%= time.tientm %></td>
    <td><%= time.titmfr %></td>
    <td><%= time.titmto %></td>
    <%
      fromMinutes = time.titmfr.to_i() * 60
      fromMinutes += (time.titmfr - time.titmfr.to_i()) * 100 
      toMinutes = time.titmto.to_i * 60
      toMinutes += (time.titmto - time.titmto.to_i()) * 100 
    %>
    <td><%= toMinutes - fromMinutes %></td>
    <td><%= ((toMinutes - fromMinutes)  / 60	) %></td>
  </tr>
<% end %>
</table>

<h2>Kettler</h2>
<table>
  <tr>
    <th>Work Date</th>
    <th>Time</th>
    <th>Issue No.</th>
    <th>Task/Project</th>
    <th>Description</th>
  </tr>

<% @work_logs.each do |log| %>
  <tr>
    <td><%= log.CREATED.strftime('%m/%d/%y') %></td>
    <% timeworked = (log.timeworked / 60.0 / 60.0) %>
    <td><%= timeworked %></td>
    <td><%= log.jira_issue.pkey %></td>
    <td><%= log.jira_issue.SUMMARY %></td>
    <td><%= log.worklogbody %></td>
  </tr>
<% end %>
</table>

